{
    "name": "vscode-ca65",
    "displayName": "ca65 Assembler",
    "description": "Support for ca65 like Syntax Highlighting, Intellisense and Code Navigation",
    "version": "0.0.1",
    "publisher": "parisoft",
    "repository": {
        "type": "git",
        "url": "https://github.com/Parisoft/vscode-ca65"
    },
    "license": "GPL-3.0-only",
    "engines": {
        "vscode": "^1.55.0"
    },
    "categories": [
        "Programming Languages"
    ],
    "activationEvents": [
        "onLanguage:ca65"
    ],
    "main": "./out/extension.js",
    "contributes": {
        "languages": [
            {
                "id": "ca65",
                "aliases": [
                    "6502/65C02/65816 Assembly",
                    "ca65"
                ],
                "extensions": [
                    ".asm",
                    ".s",
                    ".a65",
                    ".inc",
                    ".i"
                ],
                "configuration": "./language-configuration.json"
            }
        ],
        "grammars": [
            {
                "language": "ca65",
                "scopeName": "source.ca65",
                "path": "./syntaxes/ca65.tmLanguage.json"
            }
        ],
        "problemMatchers": [
            {
                "name": "ca65",
                "owner": "ca65",
                "fileLocation": "absolute",
                "pattern": [
                    {
                        "regexp": "^(.+)\\((\\d+)\\):\\s+(Error|Warning|Note):\\s+(.+)$",
                        "file": 1,
                        "line": 2,
                        "severity": 3,
                        "message": 4
                    }
                ]
            },
            {
                "name": "ld65-unresolved",
                "owner": "ca65",
                "fileLocation": "absolute",
                "pattern": [
                    {
                        "regexp": "(Unresolved external `(.*)') referenced in:\\s*$",
                        "message": 1,
                        "code": 2
                    },
                    {
                        "regexp": "\\s*(.*)\\((\\d+)\\)",
                        "file": 1,
                        "line": 2,
                        "loop": true
                    }
                ]
            },
            {
                "name": "ld65-config",
                "owner": "ca65",
                "fileLocation": "absolute",
                "pattern": [
                    {
                        "regexp": "^ld65: (.*?): ((.*\\.cfg)\\((\\d+)\\): )?(.*)$",
                        "severity": 1,
                        "file": 3,
                        "line": 4,
                        "message": 5
                    }
                ]
            },
            {
                "name": "ld65",
                "owner": "ca65",
                "fileLocation": "absolute",
                "pattern": [
                    {
                        "regexp": "^ld65: (.*?): ((.*)\\((\\d+)\\): )?(.*)$",
                        "severity": 1,
                        "file": 3,
                        "line": 4,
                        "message": 5
                    }
                ]
            }
        ]
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "pretest": "npm run compile && npm run lint",
        "lint": "eslint src --ext ts",
        "test": "node ./out/test/runTest.js"
    },
    "devDependencies": {
        "@types/vscode": "^1.55.0",
        "@types/glob": "^7.1.3",
        "@types/mocha": "^8.0.4",
        "@types/node": "^12.11.7",
        "eslint": "^7.19.0",
        "@typescript-eslint/eslint-plugin": "^4.14.1",
        "@typescript-eslint/parser": "^4.14.1",
        "glob": "^7.1.6",
        "mocha": "^8.2.1",
        "typescript": "^4.1.3",
        "vscode-test": "^1.5.0",
        "vscode-languageclient": "7.0.0"
    }
}
